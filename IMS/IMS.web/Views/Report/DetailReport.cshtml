@model IMS.Models.ViewModels.ReportViewModel
@using IMS.Models.Enum

<p style="font-size:20px;">Custom Report</p>

<form asp-action="SearchDetail" method="get">
    <div class="row">
        <div class="col-3">
            <div class="form-floating">

                <select asp-for="SearchCriteria.CustomerId" class="form-select" asp-items="@(new SelectList(ViewBag.CustomerInfo,"Id","CustomerName"))">
                    <option value="null" selected>-Choose-</option>
                </select>
                <label class="form-label">Customer Name</label>
                <span id="validproduct" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3">
            <div class="form-floating">

                <select asp-for="SearchCriteria.SupplierId" class="form-select" asp-items="@(new SelectList(ViewBag.SupplierInfo,"Id","SupplierName"))">
                    <option value="null" selected>-Choose-</option>
                </select>
                <label class="form-label">Supplier</label>
                <span id="validproduct" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3">
            <div class="form-floating">

                <select asp-for="SearchCriteria.CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.CategoryInfos,"Id","CategoryName"))">
                    <option value="null" selected>-Choose-</option>
                </select>
                <label class="form-label">Category</label>
                <span id="validproduct" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3">
            <div class="form-floating">

                <select asp-for="SearchCriteria.ProductId" class="form-select" asp-items="@(new SelectList(ViewBag.ProductInfos,"Id","ProductName"))">
                    <option value="null" selected>-Choose-</option>
                </select>
                <label class="form-label">Product</label>
                <span id="validproduct" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-3">
            <div class="form-floating">
                <input type="date" class="form-control" asp-for="SearchCriteria.StartDate" />
                <label class="form-label">Start Date</label>
                <span id="validproduct" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3">
            <div class="form-floating">
                <input type="date" class="form-control" asp-for="SearchCriteria.EndDate" />
                <label class="form-label">End Date</label>
                <span id="validproduct" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3">
            <div class="form-floating">

                <select asp-for="SearchCriteria.PaymentMethod" class="form-select" asp-items="@(Html.GetEnumSelectList<IMS.Models.Enum.PaymentMethodEnum>())">
                    <option value="null" selected>-Choose-</option>
                </select>
                <label>Payment Method</label>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="col-3">
            <button type="submit" class="btn btn-primary mt-2">Search</button>
        </div>
    </div>
</form>
<br />
@if (Model.ReportDetailViewModels != null)
{
    <div class="row" style="overflow-x:auto">
        <div class="col-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Transaction Id
                        </th>
                        <th>
                            Transaction Date
                        </th>
                        <th>
                            Customer Name
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Product
                        </th>
                        
                        <th>
                            Amount
                        </th>
                        
                        <th>
                            PaymentMethod
                        </th>
                        <th>
                            Supplier
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var items in Model.ReportDetailViewModels)
                    {
                        <tr>
                            <td>
                                @items.TransactionId
                            </td>
                            <td>
                                @items.TransactionDate.ToString("yyyy-MM-dd")
                            </td>
                            <td>
                                @items.CustomerName
                            </td>
                            <td>
                                @items.CategoryName
                            </td>
                            <td>
                                @items.ProductName
                            </td>
                            <td>
                                @items.Amount
                            </td>
                            
                            <td>
                                @Html.Raw((PaymentMethodEnum)items.PaymentMethod)
                            </td>
                            <td>
                                @items.SupplierName
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}