@model IEnumerable<IMS.Models.Entity.CategoryInfo>
<h2>Category</h2>
@if(User.IsInRole("ADMIN"))
{
    <div class="row">
        <div class="col-12">
            <a class="btn btn-primary float-end" asp-action="AddEdit">Add New</a>
        </div>
    </div>
}
<div class="row col-12">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                   @Html.DisplayNameFor(p=>p.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(p => p.CategoryDescription)
                </th>                
                <th>
                    @Html.DisplayNameFor(p => p.IsActive)
                </th>
                @if (User.IsInRole("ADMIN"))
                {
                    <th>
                        Action
                    </th>
                }
               
            </tr>
        </thead>

        <tbody>
            @foreach (var items in Model)
            {
                <tr>
                    <td>
                        @items.CategoryName
                    </td>
                    <td>
                        @items.CategoryDescription
                    </td>                    
                    <td>
                        @items.IsActive
                    </td>
                    @if (User.IsInRole("ADMIN"))
                    {
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="AddEdit" asp-route-id="@items.Id">Edit</a>
                        </td>
                    }
                   

                </tr>
            }



        </tbody>

    </table>

</div>